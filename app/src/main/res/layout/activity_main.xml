<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/login_check"
        android:layout_width="394dp"
        android:layout_height="37dp"
        android:text="TextView"
        android:layout_above="@id/fragment_container"/>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="631dp"
        android:layout_above="@+id/menubar"
        android:layout_marginBottom="0dp"></FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@android:color/background_dark"
        android:id="@+id/menubar">

        <ImageButton
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/time"
            android:onClick="onClick_time"
            android:background="@android:color/transparent" />

        <ImageButton
            android:layout_gravity="center"
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/category"
            android:onClick="onClick_category"
            android:background="@android:color/transparent" />

        <ImageButton
            android:layout_gravity="center"
            android:id="@+id/timeline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/timeline"
            android:onClick="onClick_timeline"
            android:background="@android:color/transparent" />

        <ImageButton
            android:layout_gravity="center"
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/search"
            android:onClick="onClick_search"
            android:background="@android:color/transparent" />

        <ImageButton
            android:layout_gravity="center"
            android:id="@+id/option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/option"
            android:onClick="onClick_option"
            android:background="@android:color/transparent" />
    </LinearLayout>

</RelativeLayout>